<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/activity_horizontal_margin"

                tools:context="rs.mosis.diplomski.bus.Podesavanja">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_mode"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:textSize="20dp"
        />

    <RadioGroup
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/ekoopt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ekoopt"
            android:drawableRight="@mipmap/ic_time_money"
            android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ekonomicni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ekonomicni"
                android:onClick="onRadioButtonClicked"
                android:drawableRight="@mipmap/ic_money"
                />
            <RadioButton
                android:id="@+id/minwalk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/minwalk"
                android:onClick="onRadioButtonClicked"
                android:drawableRight="@mipmap/ic_min_walk"
                />
            <RadioButton
                android:id="@+id/optimalni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/optimalni"
                android:onClick="onRadioButtonClicked"
                android:drawableRight="@mipmap/ic_time"
                />


    </RadioGroup>


</LinearLayout>
